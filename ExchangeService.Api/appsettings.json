{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System.Net.Http.HttpClient": "Information",
      "Microsoft.Extensions.Caching": "Warning",
      "HealthChecks": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Extensions.Caching": "Warning",
        "HealthChecks": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/exchangeservice-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithEnvironmentName", "WithMachineName", "WithProcessId", "WithThreadId" ]
  },
  "ExchangeRateApi": {
    "BaseUrl": "https://api.exchangerate-api.com/v4/latest/",
    "ApiKey": "",
    "TimeoutSeconds": 30,
    "RetryAttempts": 3,
    "RetryDelaySeconds": 1,
    "RetryJitterMaxSeconds": 2,
    "CircuitBreakerFailureThreshold": 3,
    "CircuitBreakerDurationSeconds": 30,
    "EnableCaching": true
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLongForSecurity!",
    "Issuer": "ExchangeService.Api",
    "Audience": "ExchangeService.Api.Users",
    "ExpiryMinutes": 60,
    "RequireHttpsMetadata": true,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ClockSkewMinutes": 5
  },
  "RateLimiting": {
    "GlobalPermitLimit": 1000,
    "GlobalWindowMinutes": 1,
    "ExchangeApiPermitLimit": 100,
    "ExchangeApiWindowMinutes": 1,
    "AuthApiPermitLimit": 50,
    "AuthApiWindowMinutes": 1
  },
  "Caching": {
    "RedisConnectionString": "",
    "ExchangeRatesCacheMinutes": 5,
    "MaxCacheEntries": 1000,
    "L1CacheSizeLimitMB": 100,
    "L2CacheExpirationMinutes": 60,
    "EnableCacheWarming": true,
    "WarmupCurrencies": ["USD", "EUR", "GBP", "JPY", "AUD", "CAD", "CHF", "CNY", "SEK", "NOK", "DKK", "PLN", "CZK", "HUF", "RON", "BGN", "HRK", "RUB", "TRY", "BRL", "MXN", "ZAR", "INR", "KRW", "SGD", "HKD", "NZD", "THB", "MYR", "IDR", "PHP"]
  },
  "CORS": {
    "AllowedOrigins": ["https://localhost:3000", "https://yourdomain.com"],
    "AllowedMethods": ["GET", "POST"],
    "AllowedHeaders": ["Content-Type", "Authorization", "X-Version"],
    "ExposedHeaders": ["X-Request-ID", "X-Response-Time"],
    "AllowCredentials": false,
    "MaxAge": 300
  },
  "AllowedHosts": "*"
}